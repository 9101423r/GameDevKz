@model GameDevKz.Server.Model.Event

@{
    ViewData["Title"] = "Удалить событие";
}

<div class="container mt-4">
    <h1>Удалить событие</h1>

    <div class="alert alert-warning">
        Вы уверены, что хотите удалить это событие?
    </div>

    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Описание</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Локация</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Дата</dt>
        <dd class="col-sm-10">@Model.EventStartDate.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-area="Admin" asp-controller="EventsAdmin" asp-action="Index" class="btn btn-secondary ms-2">Отмена</a>
    </form>
</div>
