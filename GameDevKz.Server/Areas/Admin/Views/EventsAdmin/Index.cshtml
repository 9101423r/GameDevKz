@model IEnumerable<GameDevKz.Server.Model.Event>

@{
    ViewData["Title"] = "Events — Admin";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>События</h1>
        <a asp-area="Admin" asp-controller="EventsAdmin" asp-action="Create" class="btn btn-primary">Создать событие</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Локация</th>
                <th>Дата события</th>
                <th>Дата создания</th>
                <th style="width:220px">Действия</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Location</td>
                        <td>@item.EventStartDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@item.CreateDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a asp-area="Admin" asp-controller="EventsAdmin" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Просмотр</a>
                            <a asp-area="Admin" asp-controller="EventsAdmin" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning ms-1">Редактировать</a>
                            <a asp-area="Admin" asp-controller="EventsAdmin" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1">Удалить</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Событий нет</td>
                </tr>
            }
        </tbody>
    </table>
</div>
