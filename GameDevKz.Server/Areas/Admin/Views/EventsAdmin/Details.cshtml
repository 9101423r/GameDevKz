@model GameDevKz.Server.Model.Event

@{
    ViewData["Title"] = "Детали события";
}

<div class="container mt-4">
    <h1>Детали события</h1>

    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Описание</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Локация</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Дата события</dt>
        <dd class="col-sm-10">@Model.EventStartDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Дата создания</dt>
        <dd class="col-sm-10">@Model.CreateDate.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <a asp-area="Admin" asp-controller="EventsAdmin" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редактировать</a>
    <a asp-area="Admin" asp-controller="EventsAdmin" asp-action="Index" class="btn btn-secondary ms-2">Назад</a>
</div>
