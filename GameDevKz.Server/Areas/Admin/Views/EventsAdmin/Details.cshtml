@model GameDevKz.Server.Model.Event

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Детали события";
}

<div class="p-6">
    <h1 class="text-2xl font-bold mb-6">Детали события</h1>

    <div class="bg-white shadow rounded-xl p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-6">

            <div>
                <div class="text-gray-500 text-sm">ID</div>
                <div class="text-lg font-medium">@Model.Id</div>
            </div>

            <div>
                <div class="text-gray-500 text-sm">Название</div>
                <div class="text-lg font-medium">@Model.Name</div>
            </div>

            <div class="md:col-span-2">
                <div class="text-gray-500 text-sm">Описание</div>
                <div class="text-lg">@Model.Description</div>
            </div>

            <div>
                <div class="text-gray-500 text-sm">Локация</div>
                <div class="text-lg">@Model.Location</div>
            </div>

            <div>
                <div class="text-gray-500 text-sm">Ссылка на локацию</div>
                <div class="text-lg">@Model.LocationUrl</div>
            </div>

            <div>
                <div class="text-gray-500 text-sm">Обложка</div>
                <div class="text-lg">@Model.CoverImageUrl</div>
            </div>

            <div>
                <div class="text-gray-500 text-sm">Дата события</div>
                <div class="text-lg">@Model.EventStartDate.ToString("yyyy-MM-dd HH:mm")</div>
            </div>

            <div>
                <div class="text-gray-500 text-sm">Дата создания</div>
                <div class="text-lg">@Model.CreateDate.ToString("yyyy-MM-dd HH:mm")</div>
            </div>

        </div>

        <div class="mt-8 flex gap-3">

            <a asp-area="Admin"
               asp-controller="EventsAdmin"
               asp-action="Edit"
               asp-route-id="@Model.Id"
               class="inline-flex items-center px-4 py-2 bg-yellow-500 text-white text-sm font-medium rounded-lg hover:bg-yellow-600 transition">
                Редактировать
            </a>

            <a asp-area="Admin"
               asp-controller="EventsAdmin"
               asp-action="Index"
               class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-800 text-sm font-medium rounded-lg hover:bg-gray-300 transition">
                Назад
            </a>

        </div>
    </div>
</div>
