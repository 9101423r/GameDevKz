@model GameDevKz.Server.Areas.Admin.Models.EventEditViewModel;

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Создать событие";
}

<div class="p-6">

    <div class="bg-white shadow rounded-xl p-6">

        <form asp-action="Create" method="post" class="space-y-6">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Name"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2
                              focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <textarea asp-for="Description" rows="4"
                          class="w-full border border-gray-300 rounded-lg px-3 py-2
                                 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Location" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Location"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2
                              focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Location" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="LocationUrl" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="LocationUrl"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2
                              focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="LocationUrl" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="CoverImageUrl" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="CoverImageUrl"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2
                              focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="CoverImageUrl" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="TagsInput" class="block text-sm font-medium text-gray-700 mb-1">Тэги</label>
                <input asp-for="TagsInput" placeholder="game, indie, online"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2
                              focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="TagsInput" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="EventStartDate" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="EventStartDate" type="datetime-local"
                       value="@(Model.EventStartDate == default ? DateTime.UtcNow.ToString("yyyy-MM-ddTHH:mm") : Model.EventStartDate.ToString("yyyy-MM-ddTHH:mm"))"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2
                              focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="EventStartDate" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex gap-3 pt-4">
                <button type="submit"
                        class="px-5 py-2 bg-green-600 text-white rounded-lg font-medium hover:bg-green-700 transition">
                    Создать
                </button>

                <a asp-area="Admin"
                   asp-controller="EventsAdmin"
                   asp-action="Index"
                   class="px-5 py-2 bg-gray-200 text-gray-800 rounded-lg font-medium hover:bg-gray-300 transition">
                    Отмена
                </a>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
