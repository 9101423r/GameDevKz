@model IEnumerable<GameDevKz.Server.Model.ParticipationRequest>
@{
    Layout = "_AdminLayout";
    var ev = ViewBag.Event as GameDevKz.Server.Model.Event;
    ViewData["Title"] = $"Заявки — {ev?.Name ?? "Событие"}";
}

<div class="p-6">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold">Заявки на участие @if(ev != null){
        <span class="text-sm text-gray-500">— @ev.Name</span>
                }
</h1>
        <a asp-area="Admin" asp-controller="EventsAdmin" asp-action="Index" class="px-3 py-2 bg-gray-200 rounded hover:bg-gray-300">Назад к событиям</a>
    </div>

    <div class="bg-white shadow rounded-xl p-4">
        @if (!Model.Any())
        {
            <div class="text-center py-8 text-gray-500">Заявок нет</div>
        }
        else
        {
            <div class="space-y-3">
                @foreach (var r in Model)
                {
                    <div class="flex items-center justify-between border-b py-3">
                        <div>
                            <div class="text-sm font-medium">@r.FullName <span class="text-xs text-gray-400">(@r.Email)</span></div>
                            <div class="text-xs text-gray-500">@r.Message</div>
                            <div class="text-xs text-gray-400 mt-1">Создано: @r.CreatedAt.ToString("yyyy-MM-dd HH:mm")</div>
                        </div>

                        <div class="flex items-center gap-2">
                            <span class="px-2 py-1 text-xs rounded
                                        @(r.Status == GameDevKz.Server.Model.ParticipationRequest.ParticipationStatus.Pending ? "bg-yellow-100 text-yellow-800" :
                                                                    r.Status == GameDevKz.Server.Model.ParticipationRequest.ParticipationStatus.Approved ? "bg-green-100 text-green-800" :
                                                                    "bg-red-100 text-red-800")">
                        @r.Status
                    </span>

                            <a asp-area="Admin" asp-controller="EventsAdmin" asp-action="RequestDetails" asp-route-id="@r.Id"
                               class="px-3 py-1 text-xs bg-blue-100 text-blue-800 rounded hover:bg-blue-200">Подробнее</a>

                            <form asp-area="Admin" asp-controller="EventsAdmin" asp-action="ChangeRequestStatus" method="post" class="inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@r.Id" />
                                <input type="hidden" name="status" value="Approved" />
                                <button type="submit" class="px-3 py-1 text-xs bg-green-600 text-white rounded hover:bg-green-700">Одобрить</button>
                            </form>

                            <form asp-area="Admin" asp-controller="EventsAdmin" asp-action="ChangeRequestStatus" method="post" class="inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@r.Id" />
                                <input type="hidden" name="status" value="Rejected" />
                                <button type="submit" class="px-3 py-1 text-xs bg-red-500 text-white rounded hover:bg-red-600">Отклонить</button>
                            </form>
                        </div>
                    </div>
                        }
            </div>
        }
    </div>
</div>
