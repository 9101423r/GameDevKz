@model GameDevKz.Server.Areas.Admin.Models.LoginViewModel

@{
    ViewData["Title"] = "Вход";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="w-full max-w-md bg-white shadow-lg rounded-xl p-8">

            <h1 class="text-2xl font-bold text-center mb-6">Вход в админ-панель</h1>

            <form asp-action="Login" method="post" class="space-y-5">
                @Html.AntiForgeryToken()

                <!-- Email -->
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Email"
                           class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <!-- Password -->
                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Password" type="password"
                           class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>

                <!-- Remember Me -->
                <div class="flex items-center">
                    <input asp-for="RememberMe" type="checkbox"
                           class="h-4 w-4 text-blue-600 border-gray-300 rounded" />
                    <label asp-for="RememberMe" class="ml-2 text-sm text-gray-700"></label>
                </div>

                <input type="hidden" asp-for="ReturnUrl" />

                <!-- Button -->
                <button type="submit"
                        class="w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition">
                    Войти
                </button>
            </form>

            <div class="mt-4 text-center text-sm text-gray-500">
                © @DateTime.Now.Year GameDevKz Admin
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}